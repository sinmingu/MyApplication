<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"


    tools:context=".detail_phpto">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="1"
        android:background="#3995d3"
        android:gravity="center"

        android:layout_height="45dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_weight="0.15"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:id="@+id/pre_cancle"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_width="wrap_content"
                android:id="@+id/pre_can3"
                android:layout_weight="1"
                android:visibility="invisible"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_width="wrap_content"
                android:id="@+id/pre_can4"
                android:layout_weight="1"
                android:visibility="invisible"
                android:layout_height="wrap_content" />

        </LinearLayout>



        <TextView
            android:layout_width="wrap_content"
            android:text="펫 사진"
            android:layout_weight="0.7"
            android:fontFamily="@font/test3"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="16dp"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="0.15"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:id="@+id/pre_can5"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_width="wrap_content"
                android:id="@+id/pre_can2"
                android:visibility="visible"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_width="wrap_content"
                android:id="@+id/pre_can"
                android:visibility="visible"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:background="#EAEAEA"
        android:layout_marginBottom="10dp"
        android:layout_height="1dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingBottom="10dp"
        android:paddingRight="20dp"
        android:gravity="center"
        android:layout_height="35dp">

        <TextView
            android:layout_width="wrap_content"
            android:textSize="14dp"
            android:id="@+id/de_photo_title"
            android:textColor="#000000"
            android:gravity="left"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:textSize="12dp"
            android:gravity="right"
            android:id="@+id/de_photo_date"
            android:layout_weight="1"
            android:textColor="#3F3F3F"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:background="#EAEAEA"
        android:layout_marginBottom="10dp"
        android:layout_height="1dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:weightSum="1"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:id="@+id/img_photo"
            android:layout_weight="0.5"
            android:layout_height="match_parent" />


        <TextView
            android:layout_width="match_parent"
            android:id="@+id/photo_content"
            android:layout_weight="0.5"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:textColor="#000000"
            android:textSize="14dp"
            android:layout_height="match_parent" />


    </LinearLayout>






</LinearLayout>