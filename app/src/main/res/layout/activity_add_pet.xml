<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:paddingTop="10dp"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".add_pet">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="1"
        android:gravity="center"
        android:layout_marginBottom="10dp"
        android:layout_height="35dp">

        <ImageView
            android:layout_width="wrap_content"
            android:id="@+id/pre_cancle"
            android:layout_weight="0.1"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:text="반려견 추가"
            android:layout_weight="0.8"
            android:textColor="#000000"
            android:textStyle="bold"
            android:gravity="center"
            android:fontFamily="@font/test3"
            android:textSize="16dp"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_width="wrap_content"
            android:textColor="#3995d3"
            android:textSize="12dp"
            android:visibility="invisible"
            android:id="@+id/pre_can"
            android:layout_weight="0.1"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:background="#EAEAEA"
        android:layout_marginBottom="10dp"
        android:layout_height="1dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="#ffffff"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:text="반려견 정보입력"
                android:textColor="#3995d3"
                android:textSize="14dp"
                android:layout_marginBottom="15dp"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:background="#BDBDBD"
                android:layout_marginBottom="15dp"
                android:layout_height="1dp" />

            <TextView
                android:layout_width="match_parent"
                android:text="견종(필수)"
                android:textColor="#000000"
                android:layout_marginBottom="5dp"
                android:textSize="12dp"
                android:layout_height="wrap_content" />


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="10dp"
                android:background="@drawable/btn_rect"
                android:layout_height="wrap_content">

                <RadioGroup
                    android:id="@+id/radioGroup1"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <android.support.v7.widget.AppCompatRadioButton
                        android:id="@+id/radio0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:text="소형견"
                        android:textSize="12dp"
                        android:buttonTint="#3995d3"
                        android:textColor="#000000" />

                    <RadioButton
                        android:id="@+id/radio1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:textSize="12dp"
                        android:buttonTint="#3995d3"
                        android:layout_marginRight="10dp"
                        android:text="중형견" />

                    <RadioButton
                        android:id="@+id/radio2"
                        android:layout_width="wrap_content"
                        android:buttonTint="#3995d3"
                        android:textSize="12dp"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:text="대형견" />



                </RadioGroup>



            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:text="이름(필수)"
                android:textColor="#000000"
                android:layout_marginBottom="5dp"
                android:textSize="12dp"
                android:layout_height="wrap_content" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:id="@+id/pet_name"
                android:background="@drawable/btn_rect"
                android:hint="이름"
                android:textSize="12dp" />

            <TextView
                android:layout_width="match_parent"
                android:text="나이(필수)"
                android:textColor="#000000"
                android:layout_marginBottom="5dp"
                android:textSize="12dp"
                android:layout_height="wrap_content" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:inputType="number"
                android:background="@drawable/btn_rect"
                android:id="@+id/pet_age"
                android:hint="나이"
                android:textSize="12dp" />

            <TextView
                android:layout_width="match_parent"
                android:text="성별(필수)"
                android:textColor="#000000"
                android:layout_marginBottom="5dp"
                android:textSize="12dp"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:id="@+id/pet_sex"
                android:background="@drawable/btn_rect"
                android:hint="성별"
                android:textSize="12dp" />

            <TextView
                android:layout_width="match_parent"
                android:text="생일(필수)"
                android:textColor="#000000"
                android:layout_marginBottom="5dp"
                android:textSize="12dp"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/pet_bir"
                android:layout_marginBottom="10dp"
                android:background="@drawable/btn_rect"
                android:hint="생일"
                android:textSize="12dp" />

            <TextView
                android:layout_width="match_parent"
                android:text="몸무게(필수)"
                android:textColor="#000000"
                android:layout_marginBottom="5dp"
                android:textSize="12dp"
                android:layout_height="wrap_content" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:id="@+id/pet_weight"
                android:inputType="number"
                android:background="@drawable/btn_rect"
                android:hint="몸무게"
                android:textSize="12dp" />

            <TextView
                android:layout_width="match_parent"
                android:text="중성화여부"
                android:textColor="#000000"
                android:layout_marginBottom="5dp"
                android:textSize="12dp"
                android:layout_height="wrap_content" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="40dp"
                android:id="@+id/pet_sex_status"
                android:background="@drawable/btn_rect"
                android:hint="중성화 여부"
                android:textSize="12dp" />


            <Button
                android:id="@+id/btn_pet_add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_circle"
                android:text="추가하기"
                android:stateListAnimator="@null"
                android:layout_marginBottom="20dp"
                android:textColor="#ffffff"
                android:textSize="12dp" />

        </LinearLayout>

    </ScrollView>


</LinearLayout>